{
  "name": "@fable-js/editor",
  "version": "1.0.0",
  "description": "Monaco-based editor for FableJS DSL with syntax highlighting and themes",
  "private": true,
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "monaco",
    "editor",
    "fablejs",
    "dsl",
    "syntax-highlighting",
    "typescript"
  ],
  "author": "FableJS Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lukasdias/fable-js",
    "directory": "packages/editor"
  },
  "homepage": "https://github.com/lukasdias/fable-js#readme",
  "dependencies": {
    "@fable-js/parser": "workspace:*",
    "monaco-editor": "^0.50.0",
    "@monaco-editor/react": "^4.6.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@babel/core": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "typescript": "^5.6.0",
    "rollup": "^4.0.0",
    "vitest": "^4.0.17"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  }
}